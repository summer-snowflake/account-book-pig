form.form(name='form' ng-submit='modal.submit()')
  .modal-header
    submit-button-directive(form='form')
      span {{ 'BUTTONS.YES' | translate }}
    a.btn.btn-default.pull-right(ng-click='modal.cancel()')
      span.glyphicon.glyphicon-remove#left-icon
      span {{ 'BUTTONS.CLOSE' | translate }}

  .modal-body
    error-messages-directive(errors='modal.errors')
    p {{ 'MESSAGES.CONFIRM_TO_SEND_MAIL' | translate }}
    input(type='hidden' ng-model='modal.message.user_email' name='user_email' required='true')
    pre
      div(marked='modal.message.content')
